<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordsActivity">

    <fragment
        android:id="@+id/recordsfragment"
        android:name="experitest.com.touchmenot.RecordsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:layout_alignParentTop="true"/>

    <fragment
        android:id="@+id/webitemsrecords"
        android:name="experitest.com.touchmenot.WebViewCustomFragment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"/>

    <fragment
        android:id="@+id/extrainforecords"
        android:name="experitest.com.touchmenot.ExtraInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/webitemsrecords"
        android:layout_alignEnd="@id/webitemsrecords"/>

</RelativeLayout>